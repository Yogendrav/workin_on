= title("#{resource_name.to_s.humanize}-Sign up")

%div.container
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f|
    = devise_error_messages!
    %div.center-block
      = render partial: 'devise/shared/save_reset_buttons', locals: {f: f}

    %div.col-md-4
      %br
      / %h3 Admin Registration
      = f.hidden_field "team_id", value: current_company.admins_team.id
      = render partial: 'devise/registrations/form', locals: {f: f, user: resource}
      = render partial: 'admins/form', locals: {f: f, user: resource}

%div.clearfix