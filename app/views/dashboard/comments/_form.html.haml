= form_for @comment, url: dashboard_comments_path, remote: true, html: {class: "form-inline", role: "form"} do |f|
  %div.input_comment
    .form-group
      = f.text_field :comment_box, class: "form-control"
    .form-group
      = f.submit "Comment", class: "btn btn-success", id: "commenting"
  = f.hidden_field :event_id, value: "#{params[:event_id]}"