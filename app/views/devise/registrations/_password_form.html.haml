%div
  = f.label :password
  - if @validatable
    %i (#{@minimum_password_length} characters minimum)
  = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password", required: true

%div
  = f.label :password_confirmation
  = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password comfirmation", required: true
  - if admin_signed_in?
    = f.hidden_field "company_id", value: current_admin.company.id
  - else
    = f.label :company
    = f.select "company_id", Company.pluck(:name, :id), {}, {class: "form-control"}