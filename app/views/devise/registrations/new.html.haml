= title("#{resource_name.to_s.humanize}-Sign up")

%div.container
  = form_for(resource, as: resource_name, url: registration_path(resource_name),  html: {class: "form-signin"}) do |f|
    = devise_error_messages!
    %div.center-block
      = render partial: 'devise/shared/save_reset_buttons', locals: {f: f}

    %div.col-md-4
      %br
      / %h3 Worker Registration
      = render partial: 'form', locals: {f: f, user: resource}
      = render partial: 'worker_fields_form', locals: {f: f}

      = render partial: 'devise/shared/save_reset_buttons', locals: {f: f}
%div.clearfix