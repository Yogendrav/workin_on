%div.modal.fade{id: "upload_photo_model"}
  %div.modal-dialog
    %div.modal-content
      %div.modal-header
        %button{type: "button", class: "close", "data-dismiss"=> "modal"}
          %span{"aria-hidden"=> "true"} &times;
          %span.sr-only Close

        %h4.modal-title User Photo Upload

      %div.modal-body
        = link_to "Browse", "#", :class=>"btn btn-default", :onclick=>" $('#profile_photo').click();"
        %div.fileupload
          = f.file_field :photo, id: "profile_photo", class: "form-control", placeholder: "Photo"
        = text_field_tag "profile_photo_path", nil, id: "profile_photo_path", class: "form-control"
      %div.modal-footer
        %button{type: "button", class: "btn btn-default", "data-dismiss"=> "modal"} Close
        %button{type: "button", class: "btn btn-primary", id: "upload_photo_btn"}Upload