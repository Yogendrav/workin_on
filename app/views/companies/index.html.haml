= title("Company info")

.portlet.box.green
  .portlet-title
    .caption
      Company Info
  .portlet-body.form
    = form_for(@company, url: company_path(@company), method: :patch, html: {class: "form-horizontal", role: "form"}) do |f|
      .form-body
        -if @company.errors.any?
          %div.errors
            - @company.errors.full_messages.each do |msg|
              %p= msg
        .col-md-offset-3
          .form-group
            %label.control-label.col-md-3 Company Name
            .col-md-4
              = f.text_field :name, class: "form-control"
          .form-group
            %label.control-label.col-md-3 Primary Contact
            .col-md-4
              = f.select :primary_contact_id, @company.admins.pluck(:name, :id), {}, { class: "form-control select2-drop-down" }
          .form-group
            .col-md-offset-3.col-md-2
              = f.submit "Save", class: "btn btn-primary btn-block"